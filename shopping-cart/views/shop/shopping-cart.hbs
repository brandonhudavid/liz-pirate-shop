{{# if products }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                {{# each products }}
                <li class="list-group-item">
                    {{!-- <span class="badge">{{ this.qty }}</span> --}}
                    <strong>{{ this.item.title }}</strong>
                    <span class="label label-success">${{ this.item.price }}</span>
                    <div class="btn-group">
                        
                        {{!-- <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action <span class="caret"></span></button> --}}
                        {{!-- <ul class="dropdown-menu">
                            <li><a href="#">Reduce by 1</a></li>
                            <li><a href="#">Remove all</a></li>
                        </ul> --}}
                        {{!-- <button type="button" class="btn btn-danger btn-xs">Remove from cart</button>
                        <i class="fas fa-trash-alt"></i> --}}
                    </div>
                    <div class="clearfix">
                        <a href="/add-to-cart/{{this.item._id}}"><i class="fas fa-plus pull-right btn-xs"></i></a>
                        <span class="badge pull-right btn-xs">{{ this.qty }}</span>
                        <a href="/remove-from-cart/{{this.item._id}}"><i class="fas fa-minus pull-right btn-xs"></i></a>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
    {{# if dvdDiscount }}
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                <i>10% off DVDs for purchasing all 3 DVD items.</i>
            </div>
        </div>
    {{/if}}

    {{# if bluDiscount }}
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                <i>15% off Blu-Rays for purchasing all 3 Blu-Ray items.</i>
            </div>
        </div>
    {{/if}}

    {{# if bulkDiscount }}
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                <i>5% off all items for purchasing 100 or more items.</i>
            </div>
        </div>
    {{/if}}

    {{# if hasDiscount }}
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                <hr>
                <strong>Before discount: ${{ beforeDiscount }}</strong>
            </div>
        </div>
    {{/if}}

    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h3>Total: ${{ totalPrice }}</h3>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <button type="button" class="btn btn-success">Checkout</button>
        </div>
    </div>
{{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2>No items in cart</h2>
        </div>
    </div>
{{/if}}
